{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": ".\\scripts\\build.bat"
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Run",
      "type": "shell",
      "options": {
        "shell": {
          "executable": "wt.exe",
          "args": [
            "-d ${workspaceFolder}\\build",
          ]
        }
      },
      "command": "cmd /k calculadora.exe",
      "dependsOn": ["Build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
